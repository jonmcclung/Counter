<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="incrementDecrement">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:alpha">.07</item>
        <item name="android:foreground">@color/incrementDecrementColor</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="count_by_radio_button_style"
           parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/count_by_radio_button</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">@dimen/count_by_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/count_by_padding</item>
        <item name="android:paddingRight">@dimen/count_by_padding</item>
        <item name="android:layout_marginLeft">@dimen/count_by_margin</item>
    </style>

</resources>
